<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.face.mybatis.memberMapper">
	<!--========================= 회원가입=================================== -->
	<insert id="memberInsert" parameterType="MemberVO">
	    insert into face_member values(num_seq.nextval, #{email}, #{pw}, #{phone},'Unregistered')
	</insert>
	
	<!--========================= 로그인=================================== -->
	<select id="login" resultType="MemberVO">
		select * from face_member where email = #{email} and pw = #{pw}   
	</select>
	
	<!--========================= 이메일 중복 확인=================================== -->	
	<select id="doubleCheck" resultType="int">
		select count(*) from face_member where email = #{email}  
	</select>
	
	<!--========================= 이메일 중복 확인=================================== -->
	<update id="memberUpdate" parameterType="MemberVO">	   
	    update face_member set pw = #{pw}, phone = #{phone} where = #{email}
	</update>
	
</mapper>